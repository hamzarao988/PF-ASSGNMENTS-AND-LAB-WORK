/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	int num,digit,sum,i;
	printf("enter any number:");
	scanf("%d",&num);
	do{digit=num%10;
	sum=sum+digit;
	num=num/10;
	}
	while(num!=0)
	;printf("\nthe sum of digits is %d",sum);
	
	return 0;
}
